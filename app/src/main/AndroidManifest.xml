<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.rustero.mains"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-feature android:glEsVersion="0x00020000" android:required="true"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:name="com.rustero.App"
        android:icon="@drawable/pavire1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
        <activity
            android:name="com.rustero.mains.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.rustero.mains.SettingsActivity"
            android:theme="@style/PreferenceScreenTheme">
        </activity>
        <activity
            android:name="com.rustero.mains.ProfileActivity"
            android:label="@string/title_activity_new_host_activity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.rustero.mains.LogActivity"
            android:label="@string/title_activity_log">
        </activity>
        <activity
            android:name="com.rustero.mains.OutputActivity"
            android:label="@string/title_activity_output"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.rustero.mains.RecordActivity"
            android:label="@string/title_activity_record">
        </activity>
        <activity
            android:name="com.rustero.mains.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest> <!-- android:theme="@style/Theme.MyTheme" -->
