<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sample_main_layout"
    android:background="#ffffff"
    >

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        >
        <!--app:titleTextAppearance="@style/Toolbar.TitleText"-->


    </android.support.v7.widget.Toolbar>


    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/loc_page_list"
              android:layout_width="wrap_content"
              android:layout_height="0dp"
              android:layout_weight="1"
        />


    <com.google.android.gms.ads.AdView
        android:visibility="gone"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/output_adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2719230232522738/7521411201">
    </com.google.android.gms.ads.AdView>


    <View style="@style/Divider3dp"
          android:layout_above="@+id/main_tevi_status"
        />

    <TextView
        android:id="@+id/output_tevi_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_normal"
        android:padding="11dp"
        android:layout_alignParentBottom = "true"
        android:background="#eeeeee"
        android:text="1111"
        />

</LinearLayout>
